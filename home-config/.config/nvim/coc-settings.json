{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ], "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ], "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }, "clang": {
                    "extraArgs": [
                        "-isystem", "include",
                        "-isystem", "inc",
                        "-std=c++17"
                    ]
                }
            }
        }, "godot": {
            "host": "127.0.0.1",
            "filetypes": [ "gdscript" ],
            "port": 6005
        }
    }
}

